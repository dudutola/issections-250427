<h1>My Steps</h1>

<div class="steps_sections">
  <% @sections.each do |section| %>
    <% if section.steps.any? %>
      <h2>Steps in <%= section.name %>...</h2>
      <div class="steps">
        <% section.steps.each do |step| %>
          <%= link_to  section_step_path(section, step) do %>
            <div class="steps_card section_card">
              <h3><%= step.title %></h3>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
